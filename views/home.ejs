<%- include("header") -%>
  

<section class="home">
    <nav>
      <ul class="fixed-top">
        <li><a href="">Home</a></li>
        <li><a href="<%=url%>login">Get job</a></li>
        <li><a href="<%=url%>#hire">Hire developers</a></li>
        <li><a href="<%=url%>#contact">Contact</a></li>
        
      </ul>
    </nav>
   
    
      <div class="box">
        
          <div class="box__text">
            <h1 class="home_heading">Hire the best Developers</h1>
            <p class="home_para">Check out Web developers with the skills you need for your next job.</p>
            <a class=" header__btn" href="#hire">HIRE NOW</a>
            <a class=" header__btn" href= "<%=url%>signup">singin</a>
          </div>

         
        </div>
        
      </div>
   </section>


   <section id="hire" class="hire">
<div class="container">
      <% userInfo.forEach(function(userInfo) { %>
   
      
      <div class="hire__card">
        <div class="card__head">
          <div class="img">
            <i class="bi bi-person"></i>
          </div>
        </div> 

        <div class="card__body">
          <h2 class="card__heading"><%= userInfo.name %></h2>
          <p class="web">Web Developer</p>
          </div>
        
        <div class="card__footer">
          <p class="lang"><b>languages:</b> <%= userInfo.languages %></p>
          <p><b>location:</b> <span><%= userInfo.location %><i class="bi bi-geo-alt"></i></span></p>
          <P><b>AVG. Response Time:</b> <span><%= userInfo.art%>hr</span></P>
          <p><b>Experience: </b><span><%= userInfo.experience %>/Year</span></p>
          <p><b>Per/hr:</b> <%= userInfo.hourlyPay %>$</p>
          <a class="hire__btn" href="">HIRE</a>
        </div>
        
      </div>
    
    
    <% }); %>
  </div>
   </section>

<footer id="contact">
  <div class="footer">
   <p>Designed and Developed by <br><span>M.J</span></p> 
  </div>
</footer>

